{% extends 'base.html.twig' %}

{% block body %}
    <h1>ExpensePlan</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ expensePlan.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ expensePlan.title }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ expensePlan.note }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ expensePlan.value }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ expensePlan.status }}</td>
            </tr>
            <tr>
                <th>Start</th>
                <td>{{ expensePlan.start }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('expenseplan_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('expenseplan_edit', { 'id': expensePlan.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
